<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <com.rey.material.widget.TextView
            android:id="@+id/show_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:padding="8dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.rey.material.widget.TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentRight="true"
            android:id="@+id/show_rating"
            android:padding="8dp"
            android:layout_alignBottom="@+id/show_name"
            android:layout_alignTop="@+id/show_name"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rey.material.widget.TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/show_channel"
            android:layout_below="@+id/show_name"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/show_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_channel"
            >

            <com.rey.material.widget.TextView
                android:id="@+id/show_start"
                style="@style/TextAppearance.AppCompat.Body2"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.rey.material.widget.TextView
                android:id="@+id/show_end"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorAccent"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>